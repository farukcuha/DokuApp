<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.KaydolActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dokulogo"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:id="@+id/xml_linearlayout_kaydol_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ad"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/xml_edittext_kaydol_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3"
            android:inputType="text"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E mail"
            android:textSize="20sp"

            />

        <EditText
            android:id="@+id/xml_edittext_kaydol_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3"
            android:inputType="text"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:text="Åžifre"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/xml_edittext_kaydol_sifre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3"
            android:inputType="textPassword" />
    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:text="Kaydol"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:id="@+id/xml_btn_kaydol_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loginitems" />

</LinearLayout>