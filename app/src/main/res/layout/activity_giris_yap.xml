<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.GirisYapActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    >


    <ImageView
        android:layout_marginBottom="10dp"
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dokulogo" />

    <LinearLayout
        android:id="@+id/xml_linearlayout_girisemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E mail"
            android:textSize="20sp"
            android:paddingLeft="4dp"

            />

        <EditText
            android:id="@+id/xml_edittext_girisyap_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:nextFocusDown="@+id/xml_edittext_girisyap_"
            android:backgroundTint="#2196F3"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/xml_linearlayout_girissifre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Şifre"
            android:textSize="20sp"
            android:paddingLeft="4dp"
            />

        <EditText
            android:id="@+id/xml_edittext_girisyap_sifre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3"
            android:inputType="textPassword"
            />


    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Giriş Yap"
        android:textColor="#FFFFFF"
        android:id="@+id/xml_btn_girisyap_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loginitems"
        android:layout_marginBottom="30dp"/>




</LinearLayout>